{% schema %}
{
  "name": "Custom Banner",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Background Image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Gift Guide Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}

<style>
.custom-banner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40px;
  background-size: cover;
  background-position: center;
  color: #000;
  gap: 20px;
  flex-wrap: wrap;
  position: relative;
}

.banner-logo h3,
.banner-tagline p {
  margin: 0;
  font-weight: bold;
}

.banner-button {
  padding: 12px 24px;
  background: black;
  color: white;
  border: none;
  transition: all 0.3s ease;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 10px;
  font-weight: bold;
}

.banner-button:hover {
  transform: translateX(5px);
  background-color: #333;
}
</style>

<div
  class="custom-banner"
  style="background-image: url({{ section.settings.banner_image | image_url: width: 1600 }});"
>
  <div class="banner-logo">
    <h3>{{ section.settings.logo_text }}</h3>
  </div>
  <div class="banner-tagline">
    <p>{{ section.settings.tagline }}</p>
  </div>
  <div class="banner-cta">
    <button class="banner-button">
      {{ section.settings.button_text }} <span>→</span>
    </button>
  </div>
</div>

 
<div class="gift-guide-wrapper">
  <div class="gift-guide-text">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.description }}</p>
    <button class="gift-button">{{ section.settings.button_label }} <span>→</span></button>
  </div>
  <div class="gift-guide-image">
    {% if section.settings.right_image != blank %}
      <img src="{{ section.settings.right_image | image_url: width: 800 }}" alt="Gift Guide Image" />
    {% endif %}
  </div>
</div>

<style>
.gift-guide-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 40px;
  padding: 60px 40px;
  background-color: #ffffff;
  flex-wrap: wrap;
}

.gift-guide-text {
  flex: 1;
  max-width: 550px;
}

.gift-guide-text h2 {
  font-size: 2.5rem;
  margin-bottom: 20px;
  font-weight: 700;
}

.gift-guide-text p {
  font-size: 1.1rem;
  color: #333;
  margin-bottom: 30px;
}

.gift-button {
  padding: 12px 24px;
  background-color: black;
  color: white;
  border: none;
  transition: all 0.3s ease;
  cursor: pointer;
  font-weight: bold;
  display: inline-flex;
  align-items: center;
  gap: 8px;
}

.gift-button:hover {
  background-color: #333;
  transform: translateX(5px);
}

.gift-guide-image {
  flex: 1;
  text-align: right;
}

.gift-guide-image img {
  max-width: 100%;
  height: auto;
}
</style>

