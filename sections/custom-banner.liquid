{{ 'custom-banner.css' | asset_url | stylesheet_tag }}

<section class="gift-guide-header-wrapper">
  <div class="top-bar">
    <div class="logo">{{ section.settings.logo_text }}</div>
    <div class="top-message">{{ section.settings.top_text }}</div>
    <a href="{{ section.settings.top_button_link }}" class="top-button">
      {{ section.settings.top_button_label }}
      <span class="arrow">→</span>
    </a>
  </div>

  <div class="gift-guide-banner" style="background-image: url({{ section.settings.background_image | img_url: 'master' }});">
    <div class="gift-guide-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
      <a href="{{ section.settings.button_link }}" class="gift-guide-button">
        {{ section.settings.button_label }}
        <span class="arrow">→</span>
      </a>
    </div>
  </div>

  <div class="bottom-text">
    {{ section.settings.bottom_text }}
  </div>
</section>

{% schema %}
{
  "name": "custom-banner",
  "tag": "section",
  "class": "gift-guide-header-banner",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "top_text",
      "label": "Top Bar Center Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "top_button_label",
      "label": "Top Button Label",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "top_button_link",
      "label": "Top Button Link",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Banner Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Banner Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "custom banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
