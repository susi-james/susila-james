{{ 'custom-banner.css' | asset_url | stylesheet_tag }}

<section class="gift-guide-banner" style="background-image: url({{ section.settings.background_image | img_url: 'master' }});">
  <div class="gift-guide-content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.description }}</p>
    <a href="{{ section.settings.button_link }}" class="gift-guide-button">
      {{ section.settings.button_label }}
      <span class="arrow">â†’</span>
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Gift Guide Banner",
  "tag": "section",
  "class": "section-gift-guide",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}