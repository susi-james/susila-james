{% schema %}
{
  "name": "Manual Product Grid",
  "tag": "section",
  "class": "manual-product-grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Product 1"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Product 2"
    },
    {
      "type": "product",
      "id": "product_3",
      "label": "Product 3"
    },
    {
      "type": "product",
      "id": "product_4",
      "label": "Product 4"
    },
    {
      "type": "product",
      "id": "product_5",
      "label": "Product 5"
    },
    {
      "type": "product",
      "id": "product_6",
      "label": "Product 6"
    }
  ],
  "presets": [
    {
      "name": "Manual Product Grid",
      "category": "Products"
    }
  ]
}
{% endschema %}

{% stylesheet %}
<style>
.manual-product-grid {
  padding: 40px 20px;
}
.manual-product-grid h2 {
  text-align: center;
  margin-bottom: 30px;
}
.manual-product-grid .grid {
  display: grid;
  gap: 24px;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
}
.manual-product-grid .card {
  border: 1px solid #eee;
  padding: 16px;
  text-align: center;
  transition: box-shadow 0.2s;
}
.manual-product-grid .card:hover {
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}
.manual-product-grid img {
  max-width: 100%;
  height: auto;
}
.manual-product-grid .title {
  margin-top: 10px;
  font-weight: 600;
}
.manual-product-grid .price {
  color: #555;
  margin-top: 5px;
}
</style>
{% endstylesheet %}

<section class="manual-product-grid">
  {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="grid">
    {% assign product_ids = "product_1,product_2,product_3,product_4,product_5,product_6" | split: "," %}
    {% for id in product_ids %}
      {% assign product = all_products[section.settings[id]] %}
      {% if product %}
        <div class="card">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
            <div class="title">{{ product.title }}</div>
            <div class="price">{{ product.price | money }}</div>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>